CREATE TABLE `CAR_INFORMATION` (
	`CI_PK`	VARCHAR(20)	NOT NULL,
	`CP_NAME`	VARCHAR(20)	NULL
);

CREATE TABLE `CAR_NAME` (
	`CAR_PK`	VARCHAR(20)	NOT NULL,
	`CAR_NAME`	VARCHAR(20)	NULL
);

CREATE TABLE `YEAR` (
	`YEAR_PK`	VARCHAR(20)	NOT NULL,
	`YEAR_MODEL`	VARCHAR(20)	NULL
);

CREATE TABLE `CAR_INFO_NAME_YEAR` (
	`CI_YEAR_PK`	VARCHAR(20)	NOT NULL,
	`CI_FK`	VARCHAR(20)	NOT NULL,
	`CAR_FK`	VARCHAR(20)	NOT NULL,
	`YEAR_FK`	VARCHAR(20)	NOT NULL
);

CREATE TABLE `OPTIONS` (
	`OP_PK`	VARCHAR(20)	NOT NULL,
	`OPTION`	VARCHAR(20)	NULL
);

CREATE TABLE `CAR_INFO_OPTIONS` (
	`CI_OPTION_PK`	VARCHAR(20)	NOT NULL,
	`OP_FK`	VARCHAR(20)	NOT NULL,
	`CI_YEAR_FK`	VARCHAR(20)	NOT NULL
);

ALTER TABLE `CAR_INFORMATION` ADD CONSTRAINT `PK_CAR_INFORMATION` PRIMARY KEY (
	`CI_PK`
);

ALTER TABLE `CAR_NAME` ADD CONSTRAINT `PK_CAR_NAME` PRIMARY KEY (
	`CAR_PK`
);

ALTER TABLE `YEAR` ADD CONSTRAINT `PK_YEAR` PRIMARY KEY (
	`YEAR_PK`
);

ALTER TABLE `CAR_INFO_NAME_YEAR` ADD CONSTRAINT `PK_CAR_INFO_NAME_YEAR` PRIMARY KEY (
	`CI_YEAR_PK`,
	`CI_FK`,
	`CAR_FK`,
	`YEAR_FK`
);

ALTER TABLE `OPTIONS` ADD CONSTRAINT `PK_OPTIONS` PRIMARY KEY (
	`OP_PK`
);

ALTER TABLE `CAR_INFO_OPTIONS` ADD CONSTRAINT `PK_CAR_INFO_OPTIONS` PRIMARY KEY (
	`CI_OPTION_PK`,
	`OP_FK`,
	`CI_YEAR_FK`
);

ALTER TABLE `CAR_INFO_NAME_YEAR` ADD CONSTRAINT `FK_CAR_INFORMATION_TO_CAR_INFO_NAME_YEAR_1` FOREIGN KEY (
	`CI_FK`
)
REFERENCES `CAR_INFORMATION` (
	`CI_PK`
);

ALTER TABLE `CAR_INFO_NAME_YEAR` ADD CONSTRAINT `FK_CAR_NAME_TO_CAR_INFO_NAME_YEAR_1` FOREIGN KEY (
	`CAR_FK`
)
REFERENCES `CAR_NAME` (
	`CAR_PK`
);

ALTER TABLE `CAR_INFO_NAME_YEAR` ADD CONSTRAINT `FK_YEAR_TO_CAR_INFO_NAME_YEAR_1` FOREIGN KEY (
	`YEAR_FK`
)
REFERENCES `YEAR` (
	`YEAR_PK`
);

ALTER TABLE `CAR_INFO_OPTIONS` ADD CONSTRAINT `FK_OPTIONS_TO_CAR_INFO_OPTIONS_1` FOREIGN KEY (
	`OP_FK`
)
REFERENCES `OPTIONS` (
	`OP_PK`
);

ALTER TABLE `CAR_INFO_OPTIONS` ADD CONSTRAINT `FK_CAR_INFO_NAME_YEAR_TO_CAR_INFO_OPTIONS_1` FOREIGN KEY (
	`CI_YEAR_FK`
)
REFERENCES `CAR_INFO_NAME_YEAR` (
	`CI_YEAR_PK`
);

