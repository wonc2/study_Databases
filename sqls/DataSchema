CREATE TABLE `COMPANY` (
	`COMPANY_PK`	INT	NOT NULL,
	`COMPANY_NAME`	VARCHAR(20)	NULL
);

CREATE TABLE `CAR` (
	`CAR_PK`	INT	NOT NULL,
	`COMPANY_PK`	INT	NOT NULL,
	`CAR_NAME`	VARCHAR(20)	NULL,
	`CAR_YEAR`	VARCHAR(20)	NULL
);

CREATE TABLE `OPTION` (
	`OPTION_PK`	INT	NOT NULL,
	`CAR_FK`	INT	NOT NULL,
	`OPTION`	VARCHAR(20)	NULL
);

ALTER TABLE `COMPANY` ADD CONSTRAINT `PK_COMPANY` PRIMARY KEY (
	`COMPANY_PK`
);

ALTER TABLE `CAR` ADD CONSTRAINT `PK_CAR` PRIMARY KEY (
	`CAR_PK`,
	`COMPANY_PK`
);

ALTER TABLE `OPTION` ADD CONSTRAINT `PK_OPTION` PRIMARY KEY (
	`OPTION_PK`,
	`CAR_FK`
);

ALTER TABLE `CAR` ADD CONSTRAINT `FK_COMPANY_TO_CAR_1` FOREIGN KEY (
	`COMPANY_PK`
)
REFERENCES `COMPANY` (
	`COMPANY_PK`
);

ALTER TABLE `OPTION` ADD CONSTRAINT `FK_CAR_TO_OPTION_1` FOREIGN KEY (
	`CAR_FK`
)
REFERENCES `CAR` (
	`CAR_PK`
);
