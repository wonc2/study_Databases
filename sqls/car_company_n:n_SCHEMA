CREATE TABLE `COMPANY` (
	`CP_PK`	VARCHAR(20)	NOT NULL,
	`CP_NAME`	VARCHAR(20)	NULL
);

CREATE TABLE `CAR_NAME` (
	`CN_PK`	VARCHAR(20)	NOT NULL,
	`CAR_NAME`	VARCHAR(20)	NULL
);

CREATE TABLE `MODEL_YEAR` (
	`YEAR_PK`	VARCHAR(20)	NOT NULL,
	`DATE_YEAR`	VARCHAR(20)	NULL
);

CREATE TABLE `CAR_INFO` (
	`CI_PK`	VARCHAR(20)	NOT NULL,
	`CP_FK`	VARCHAR(20)	NOT NULL,
	`CN_FK`	VARCHAR(20)	NOT NULL,
	`YEAR_FK`	VARCHAR(20)	NOT NULL
);

CREATE TABLE `OPTIONS` (
	`OP_PK`	VARCHAR(20)	NOT NULL,
	`OPTION`	VARCHAR(20)	NULL
);

CREATE TABLE `CAR_INFO_OPTIONS` (
	`CI_OP_PK`	VARCHAR(20)	NOT NULL,
	`OP_FK`	VARCHAR(20)	NOT NULL,
	`CI_FK`	VARCHAR(20)	NOT NULL
);

ALTER TABLE `COMPANY` ADD CONSTRAINT `PK_COMPANY` PRIMARY KEY (
	`CP_PK`
);

ALTER TABLE `CAR_NAME` ADD CONSTRAINT `PK_CAR_NAME` PRIMARY KEY (
	`CN_PK`
);

ALTER TABLE `MODEL_YEAR` ADD CONSTRAINT `PK_MODEL_YEAR` PRIMARY KEY (
	`YEAR_PK`
);

ALTER TABLE `CAR_INFO` ADD CONSTRAINT `PK_CAR_INFO` PRIMARY KEY (
	`CI_PK`,
	`CP_FK`,
	`CN_FK`,
	`YEAR_FK`
);

ALTER TABLE `OPTIONS` ADD CONSTRAINT `PK_OPTIONS` PRIMARY KEY (
	`OP_PK`
);

ALTER TABLE `CAR_INFO_OPTIONS` ADD CONSTRAINT `PK_CAR_INFO_OPTIONS` PRIMARY KEY (
	`CI_OP_PK`,
	`OP_FK`,
	`CI_FK`
);

ALTER TABLE `CAR_INFO` ADD CONSTRAINT `FK_COMPANY_TO_CAR_INFO_1` FOREIGN KEY (
	`CP_FK`
)
REFERENCES `COMPANY` (
	`CP_PK`
);

ALTER TABLE `CAR_INFO` ADD CONSTRAINT `FK_CAR_NAME_TO_CAR_INFO_1` FOREIGN KEY (
	`CN_FK`
)
REFERENCES `CAR_NAME` (
	`CN_PK`
);

ALTER TABLE `CAR_INFO` ADD CONSTRAINT `FK_MODEL_YEAR_TO_CAR_INFO_1` FOREIGN KEY (
	`YEAR_FK`
)
REFERENCES `MODEL_YEAR` (
	`YEAR_PK`
);

ALTER TABLE `CAR_INFO_OPTIONS` ADD CONSTRAINT `FK_OPTIONS_TO_CAR_INFO_OPTIONS_1` FOREIGN KEY (
	`OP_FK`
)
REFERENCES `OPTIONS` (
	`OP_PK`
);

ALTER TABLE `CAR_INFO_OPTIONS` ADD CONSTRAINT `FK_CAR_INFO_TO_CAR_INFO_OPTIONS_1` FOREIGN KEY (
	`CI_FK`
)
REFERENCES `CAR_INFO` (
	`CI_PK`
);

